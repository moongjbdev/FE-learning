mixin tourItem (image, price, title, review, reviewCount, duration, tourPrice)
        .tour
          .tour-top
            img.tour-image(src=image, alt='img')
            span.tour-price= price
          .tour-content
            h3.tour-title= title
            .tour-rating
              .tour-review
                .tour-star
                  img(src='./images/star.png', alt='vote star')
                .tour-review-count
                  span= review
                    |  (#{reviewCount} reviews)
              span.div Duration: #{duration}
            a.tour-button(href='https://google.com', target='_blank', rel='noopener noreferrer') Tours Price $#{tourPrice}

mixin popularItem ()
        .popular-item
          .popular-image
            .popular-overlay
            img(src='https://images.unsplash.com/photo-1509316975850-ff9c5deb0cd9?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', alt='unsplash').popular-img
            span.popular-label Must See
          .popular-content
            span.popular-time Sep 28 10:00 AM - 1:00 PM
            h3.popular-title The Grand Palace
            .popular-review
              img(src="/images/star.png" alt="star")
              span 4.8 (12 reviews)
